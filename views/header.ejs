<header class="header-pc">
    <h1><a href="/">★게시판★</a></h1>

    <form class="search-container" action="/" method="get">
        <select name="searchType" class="searchType">
            <option value="title+content">제목 + 내용</option>
            <option value="title">제목</option>
            <option value="content">내용</option>
            <option value="user">작성자</option>
        </select>
        <input type="text" name="search" required>
        <button type="submit">검색</button>
    </form>
    
    
    <% if(locals.user) { %>
        <div class="notification-container">
            <a href="/user/<%=user.id%>/notification">
                <i class="fa-regular fa-bell notification-btn"></i>
                <% if (notificationCount > 0) { %>
                    <div class="notification-count"><%= notificationCount %></div>
                <% } %>
            </a>
        </div>
        <div class="user-container">
            <div class="user-btn"><%= user.username %></div>
        </div>
        
    <% } else { %>
        <a href="/sign-up">회원가입</a>
        <a href="/sign-in">로그인</a>
    <% } %>   
</header>

<header class="header-mobile">
    <div class="header-mobile-container">
        <h1><a href="/">★게시판★</a></h1>
        
        <% if(locals.user) { %>
            <div class="notification-container">
                <a href="/user/<%=user.id%>/notification">
                    <i class="fa-regular fa-bell notification-btn"></i>
                    <% if (notificationCount > 0) { %>
                        <div class="notification-count"><%= notificationCount %></div>
                    <% } %>
                </a>
            </div>
            <div class="user-container">
                <div class="user-btn"><%= user.username %></div>
            </div>
            
        <% } else { %>
            <a href="/sign-up">회원가입</a>
            <a href="/sign-in">로그인</a>
        <% } %>    
    </div>
       
    <form class="search-container" action="/" method="get">
        <select name="searchType" class="searchType">
            <option value="title+content">제목 + 내용</option>
            <option value="title">제목</option>
            <option value="content">내용</option>
            <option value="user">작성자</option>
        </select>
        <input type="text" name="search" required>
        <button type="submit">검색</button>
    </form>
</header>

<% if (locals.user) { %>
    <div id="user-dialog" class="dialog">
        <a href="/user/<%= user.id %>">회원정보</a>
        <a href="/log-out">로그아웃</a>
    </div>
<% } %>
